@model List<Rent_A_Car.Models.Sınıf>
<!DOCTYPE html>

<html>
<head>
    <title>Sınıflar</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">


</head>
<body>
    <div>

        <br />
        <h2>Sınıflar Listesi</h2>

        <a class="btn btn-primary btn-sm" href="/">Geri</a>
        <a class="btn btn-primary btn-sm" href="/Cars/SınıfCreate">Yeni Sınıf Ekle</a>



        <br />
        <br />

        <table class="table table-striped" border="2">
            <thead>
                <tr>
                    @*<th>ID</th>*@
                    <th>Sınıf ID</th>
                    <th>Sınıf Adı</th>
                    <th>Kiralama Ücreti</th>
                    <th>Aksiyon</th>
                </tr>
            </thead>
            <tbody>

                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        @*<td>@(i + 1)</td>*@
                        <td>@Model[i].sinifID</td>
                        <td>@Model[i].sinifAdi</td>
                        <td>@Model[i].sinifUcret</td>

                        <td>
                            <a class="btn btn-primary btn-sm" href="/Cars/SınıfEdit/@Model[i].sinifID">Düzenle</a>
                            <a class="btn btn-danger btn-sm" href="/Cars/SınıfDelete/@Model[i].sinifID">Sil</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>

    </div>
</body>
</html>