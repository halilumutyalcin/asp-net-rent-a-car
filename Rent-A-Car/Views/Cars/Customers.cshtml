@model List<Rent_A_Car.Models.Musteri>
<!DOCTYPE html>

<html>
<head>
    <title>Customers</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">


</head>
<body>
    <div>

        <br />
        <h2>List of Customers</h2>

        <a class="btn btn-primary btn-sm" href="/">Back</a>
        <a class="btn btn-primary btn-sm" href="/Cars/CustomersCreate">New Customer</a>



        <br />
        <br />

        <table class="table table-striped" border="2">
            <thead>
                <tr>
                    <th>TCK NO</th>
                    <th>Ad</th>
                    <th>Adres</th>
                    <th>Telefon</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var musteri in Model)
                {
                    <tr>
                        <td>@musteri.MusteriTCK</td>
                        <td>@musteri.MusteriAd</td>
                        <td>@musteri.MusteriAdres</td>
                        <td>@musteri.MusteriTelefon</td>
                        <td>
                            <a class="btn btn-primary btn-sm" href="/Cars/CustomersEdit/@musteri.MusteriTCK">Edit</a>
                            <a class="btn btn-danger btn-sm" href="/Cars/CustomersDelete/@musteri.MusteriTCK">Delete</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</body>
</html>