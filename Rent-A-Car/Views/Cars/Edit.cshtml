@model Rent_A_Car.Models.Araba
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<!DOCTYPE html>

<html>
<head>
    <title>Edit</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">

</head>
<body>

    <div>
        <form asp-controller="Cars" asp-action="Edit" method="post">

            <div class="row mb-3">
                <label class="col-sm-3 col-form-label">Plaka</label>
                <div class="col-sm-6">
                    <input required type="text" class="form-control" asp-for="@Model.ArabaPlaka" value="@ViewBag.plaka" /><br />
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-3 col-form-label">Marka</label>
                <div class="col-sm-6">
                    <input required type="text" class="form-control" asp-for="@Model.ArabaMarka" value="@ViewBag.marka" /><br />
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-3 col-form-label">Model</label>
                <div class="col-sm-6">
                    <input required type="text" class="form-control" asp-for="@Model.ArabaModel" value="@ViewBag.model" /><br />
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-3 col-form-label">Renk</label>
                <div class="col-sm-6">
                    <input required type="text" class="form-control" asp-for="@Model.ArabaRenk" value="@ViewBag.renk" /><br />
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-3 col-form-label">Sınıf ID</label>
                <div class="col-sm-6">
                    <input required type="text" class="form-control" asp-for="@Model.ArabaSinifID" value="@ViewBag.sinifID" /><br />
                </div>
            </div>

            <div class="row mb-3">
                <div class="offset-sm-3 col-sm-3 d-grid">
                    <a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
                </div>
                <div class="col-sm-3 d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>

        </form>


    </div>
</body>
</html>