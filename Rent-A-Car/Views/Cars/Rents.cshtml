@model List<Rent_A_Car.Models.Kira>
<!DOCTYPE html>

<html>
<head>
    <title>Kiralamalar</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">


</head>
<body>
    <div>

        <br />
        <h2>Kiralama Listesi</h2>

        <a class="btn btn-primary btn-sm" href="/">Geri</a>
        <a class="btn btn-primary btn-sm" href="/Cars/RentsCreate">Yeni Kira Ekle</a>



        <br />
        <br />

        <table class="table table-striped" border="2">
            <thead>
                <tr>
                    @*<th>ID</th>*@
                    <th>Tarih</th>
                    <th>Ucret</th>
                    <th>Müşteri TC</th>
                    <th>Plaka</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>

                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        @*<td>@(i + 1)</td>*@
                        <td>@Model[i].tarih</td>
                        <td>@Model[i].ucret</td>
                        <td>@Model[i].musteri_tc</td>
                        <td>@Model[i].araba_plaka</td>

                        <td>
                            <a class="btn btn-primary btn-sm" href="/Cars/RentsEdit/@Model[i].tarih">Düzenle</a>
                            <a class="btn btn-danger btn-sm" href="/Cars/RentsDelete/@Model[i].tarih">Sil</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>

    </div>
</body>
</html>