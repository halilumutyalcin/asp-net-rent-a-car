@model Rent_A_Car.Models.Sınıf
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<!DOCTYPE html>

<html>
<head>
    <title>Sınıf Düzenle</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">

</head>
<body>

    <div>
        <form asp-controller="Cars" asp-action="SınıfEdit" method="post">

            <div class="row mb-3">
                <label class="col-sm-3 col-form-label">Sınıf ID</label>
                <div class="col-sm-6">
                    <input required type="text" class="form-control" asp-for="@Model.sinifID" value="@ViewBag.id" /><br />
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-3 col-form-label"> Sınıf Adı</label>
                <div class="col-sm-6">
                    <input required type="text" class="form-control" asp-for="@Model.sinifAdi" value="@ViewBag.adi" /><br />
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-3 col-form-label">Kiralama Ücreti</label>
                <div class="col-sm-6">
                    <input required type="text" class="form-control" asp-for="@Model.sinifUcret" value="@ViewBag.ucret" /><br />
                </div>
            </div>


            <div class="row mb-3">
                <div class="offset-sm-3 col-sm-3 d-grid">
                    <a class="btn btn-outline-primary" href="/Cars/Sınıf" role="button">İptal</a>
                </div>
                <div class="col-sm-3 d-grid">
                    <button type="submit" class="btn btn-primary">Gönder</button>
                </div>
            </div>

        </form>


    </div>
</body>
</html>