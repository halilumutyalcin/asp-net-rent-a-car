@model Rent_A_Car.Models.Musteri

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<!DOCTYPE html>

<html>
<head>
    <title>Edit</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">

</head>
<body>
    <h1>
        Rent Car
    </h1>
    <table class="table table-striped" border="2">
        <thead>
            <tr>

                <th>Plaka</th>
                <th>Marka</th>
                <th>Model</th>
                <th>Renk</th>
                <th>Sınıf ID</th>
                <th>Sınıf Adı</th>
                <th>Kiralama Bedeli</th>

            </tr>
        </thead>
        <tbody>

            <tr>

                <td>@ViewBag.plaka</td>
                <td>@ViewBag.marka</td>
                <td>@ViewBag.model</td>
                <td>@ViewBag.renk</td>
                <td>@ViewBag.sinifID</td>
                <td>@ViewBag.sinifAdi</td>
                <td>@ViewBag.ucret</td>

                </tr>
        </tbody>
    </table>

    <div>
        <form asp-controller="Cars" asp-action="Rent" method="post">

             <input required type="hidden" class="form-control" asp-for="@Model.MusteriTCK" name ="ucret" value="@ViewBag.ucret"/><br />

            <div class="row mb-3">
                <label class="col-sm-3 col-form-label">TCK No</label>
                <div class="col-sm-6">
                    <input required type="text" class="form-control" asp-for="@Model.MusteriTCK"/><br />
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-3 col-form-label">Ad</label>
                <div class="col-sm-6">
                    <input required type="text" class="form-control" asp-for="@Model.MusteriAd"/><br />
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-3 col-form-label">Adres</label>
                <div class="col-sm-6">
                    <input required type="text" class="form-control" asp-for="@Model.MusteriAdres"/><br />
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-3 col-form-label">Telefon</label>
                <div class="col-sm-6">
                    <input required type="number" class="form-control" asp-for="@Model.MusteriTelefon"/><br />
                </div>
            </div>
            

            <div class="row mb-3">
                <div class="offset-sm-3 col-sm-3 d-grid">
                    <a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
                </div>
                <div class="col-sm-3 d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>

        </form>


    </div>
</body>
</html>